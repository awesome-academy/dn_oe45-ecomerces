<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="mb-4"><%= t ".sign_in" %></h1>
    <%= form_with url: sign_in_path do |form| %>
      <div class="form-group">
        <%= form.label :emai, t(".email") %>
        <%= form.email_field :email, class: "form-control", placeholder:
          "example@email.com" %>
      </div>
      <div class="form-group">
        <%= form.label :password, t(".password") %>
        <%= form.password_field :password, class: "form-control", placeholder:
          t(".password") %>
      </div>
      <%= form.submit t(".sign_in"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
